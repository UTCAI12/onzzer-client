<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane minHeight="-Infinity" minWidth="-Infinity" styleClass="pane-popup" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox>
         <children>
            <Pane nodeOrientation="RIGHT_TO_LEFT">
               <children>
                  <Button contentDisplay="TOP" graphicTextGap="0.0" mnemonicParsing="false" style="-fx-padding: 3;" styleClass="cross-button">
                     <graphic>
                        <ImageView fitHeight="10.0" fitWidth="10.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../img/cross.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <font>
                        <Font size="1.0" />
                     </font>
                  </Button>
               </children>
            </Pane>
            <VBox alignment="CENTER" styleClass="pane-popup-content">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="h1" text="Supprimer">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin></Text>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="body-text" text="Vous voulez supprimer cette musique :" />
                        <HBox>
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="body-text-bold" text="Titre : " />
                              <Text fx:id="txtTitle" strokeType="OUTSIDE" strokeWidth="0.0" text="Unknown" />
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="body-text-bold" text="Artiste : " />
                              <Text fx:id="txtAuthor" strokeType="OUTSIDE" strokeWidth="0.0" text="Unknown" />
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="body-text-bold" text="Album : " />
                              <Text fx:id="txtAlbum" strokeType="OUTSIDE" strokeWidth="0.0" text="-" />
                           </children>
                        </HBox>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Cette action est dÃ©finitive.">
                           <VBox.margin>
                              <Insets bottom="10.0" top="15.0" />
                           </VBox.margin></Text>
                     </children>
                  </VBox>
                  <Button fx:id="btnDelete" mnemonicParsing="false" style="-fx-background-radius: 20;" onAction="#onClickDeleteTrack" styleClass="validate-button" text="Confirmer" />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</Pane>
