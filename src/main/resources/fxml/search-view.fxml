<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="10.0" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.utc.onzzer.client.music.SearchViewController">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="h1" text="Recherche" />
      <Separator prefWidth="200.0" styleClass="separator-dark" />
      <HBox alignment="TOP_CENTER" spacing="30.0" VBox.vgrow="NEVER">
         <children>
            <TextField fx:id="txtTitle" onAction="#onSearchFieldChanged" promptText="Titre" styleClass="input-light" />
            <TextField fx:id="txtAuthor" layoutX="10.0" layoutY="10.0" onAction="#onSearchFieldChanged" promptText="Artiste" styleClass="input-light" />
            <TextField fx:id="txtAlbum" layoutX="159.0" layoutY="10.0" onAction="#onSearchFieldChanged" promptText="Album" styleClass="input-light" />
         </children>
      </HBox>
      <TableView fx:id="tableTracks" prefHeight="200.0" prefWidth="200.0">
         <columns>
            <TableColumn fx:id="columnTitle" prefWidth="75.0" text="Titre" />
            <TableColumn fx:id="columnAuthor" prefWidth="75.0" text="Artiste" />
            <TableColumn fx:id="columnAlbum" prefWidth="75.0" text="Album" />
            <TableColumn fx:id="columnActions" prefWidth="75.0" text="Actions" />
         </columns>
      </TableView>
   </children>
</VBox>
