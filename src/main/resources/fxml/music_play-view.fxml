<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="fr.utc.onzzer.client.music.PlayViewController">
   <HBox alignment="TOP_CENTER" minWidth="250.0" styleClass="h1" BorderPane.alignment="CENTER">
      <children>
         <VBox alignment="TOP_CENTER" minWidth="250.0" styleClass="h1" BorderPane.alignment="CENTER">
            <children>
               <Pane>
                  <Label maxWidth="1.7976931348623157E308" text="Barre de lecture" />
               </Pane>
               <Pane>
                  <VBox alignment="TOP_CENTER" minWidth="250.0" styleClass="h1" BorderPane.alignment="CENTER">
                     <children>
                        <Label fx:id="titleLabel" text="Title" />
                        <HBox alignment="TOP_CENTER" minWidth="250.0" styleClass="h1" BorderPane.alignment="CENTER">
                           <Button text="Previous" onAction="#previous" />
                           <Button text="Play/Pause" onAction="#play" />
                           <Button text="Next" onAction="#next" />
                        </HBox>
                     </children>
                     <padding>
                        <Insets left="25.0" right="25.0" />
                     </padding>
                  </VBox>
               </Pane>
            </children>
            <padding>
               <Insets left="25.0" right="25.0" />
            </padding>
         </VBox>
      </children>
      <padding>
         <Insets left="25.0" right="25.0" />
      </padding>
   </HBox>
   <padding>
      <Insets bottom="25.0" top="25.0" />
   </padding>
</AnchorPane>
