<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" focusTraversable="false" styleClass="edge-to-edge" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.utc.onzzer.onzzerclient.main.RegisterViewController">
   <content>
      <BorderPane>
         <center>
            <VBox alignment="CENTER" maxWidth="500.0" minWidth="500.0" spacing="15.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </padding>
               <ImageView fitWidth="100.0" pickOnBounds="true" preserveRatio="true" styleClass="icon-medium">
                  <Image url="@../img/onzzer.png" />
               </ImageView>
               <Label styleClass="h1" text="Inscris-toi" />
               <HBox alignment="CENTER" spacing="3.0">
                  <Label text="Déjà un compte sur Onzzer ?" textAlignment="CENTER" />
                  <Label fx:id="connectionLabel" onMouseClicked="#onConnectionLabelClick" styleClass="link" text="Connexion" />
               </HBox>
               <VBox maxWidth="500.0">
                  <Label text="Adresse mail :" />
                  <TextField styleClass="input-light" />
               </VBox>
               <VBox maxWidth="500.0">
                  <Label text="Nom :" />
                  <TextField styleClass="input-light" />
               </VBox>
               <VBox>
                  <Label text="Prénom :" />
                  <TextField styleClass="input-light" />
               </VBox>
               <VBox>
                  <Label text="Pseudo :" />
                  <TextField styleClass="input-light" />
               </VBox>
               <VBox>
                  <Label text="Date de naissance :" />
                  <DatePicker fx:id="dp" focusTraversable="false" maxWidth="1.7976931348623157E308" styleClass="input-light" />
               </VBox>
               <VBox>
                  <Label text="Mot de passe " />
                  <PasswordField styleClass="input-light" />
               </VBox>
               <VBox>
                  <Label text="Confirmer le mot de passe :" />
                  <PasswordField styleClass="input-light" />
               </VBox>
               <Button mnemonicParsing="false" onMouseClicked="#onRegistrationButtonClick" text="S'INSCRIRE">
                  <styleClass>
                     <String fx:value="button-light" />
                     <String fx:value="submit-button" />
                  </styleClass>
               </Button>
            </VBox>
         </center>
      </BorderPane>
   </content>
</ScrollPane>
