         <BorderPane.margin>
            <Insets left="25.0" right="25.0"/>
         </BorderPane.margin>
         <Label maxWidth="1.7976931348623157E308" styleClass="h1" text="Phiphi"/>
         <Separator styleClass="separator-dark"/>
      </VBox>
   </left>
   <center>
      <VBox alignment="TOP_CENTER"
            style="-fx-border-width: 1; -fx-border-color: gray; -fx-border-style: hidden solid hidden solid;"
            BorderPane.alignment="CENTER">
         <padding>
            <Insets left="25.0" right="25.0"/>
         </padding>
         <Label styleClass="h1" text="Vos musiques"/>
         <Separator prefWidth="200.0" styleClass="separator-dark"/>
         <TableView>
            <columns>
               <TableColumn maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="Titre"/>
               <TableColumn maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="Artiste"/>
               <TableColumn maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="Album"/>
               <TableColumn editable="false" prefWidth="-1.0" sortable="false" text="PartagÃ©"/>
               <TableColumn prefWidth="-1.0" text="Actions"/>
            </columns>
            <VBox.margin>
               <Insets top="25.0"/>
            </VBox.margin>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
         </TableView>
      </VBox>
   </center>
   <right>
      <VBox alignment="TOP_CENTER" minWidth="250.0" styleClass="h1" BorderPane.alignment="CENTER">
         <padding>
            <Insets left="25.0" right="25.0"/>
         </padding>
         <HBox>
            <Label maxWidth="1.7976931348623157E308" text="Utilisateurs"/>
            <Separator maxWidth="10.0"/>
            <TextField maxWidth="100.0" fx:id="searchField" promptText="Rechercher...">
               <styleClass>
                  <String fx:value="-fx-border-height : 1 px" />
               </styleClass>
            </TextField>
            <Separator maxWidth="10.0"/>
            <Button maxHeight="20" maxWidth="15" onAction="#handleSearch">
               <graphic>
                  <ImageView fitHeight="20" fitWidth="15" preserveRatio="true">
                     <Image url="@../img/icone-loupe-gris.png"/>
                  </ImageView>
               </graphic>
            </Button>
         </HBox>
         <Separator  maxWidth="200.0"  styleClass="separator-dark"/>
         <ListView  style="list-cell" fx:id="usersList" VBox.vgrow="ALWAYS">
            <VBox.margin >
               <Insets top="25.0"/>
            </VBox.margin>
         </ListView>
      </VBox>
   </right>
   <padding>
      <Insets bottom="25.0" top="25.0" />
   </padding>
   <stylesheets>
      <URL value="@../styles/style.css" />
      <URL value="@../styles/main-view.css" />
   </stylesheets>
