               </graphic>
            </Button>
         </HBox>
         <Separator maxWidth="200.0" styleClass="separator-dark" />
         <ListView fx:id="usersList" style="list-cell" VBox.vgrow="ALWAYS">
            <VBox.margin>
               <Insets top="25.0" />
            </VBox.margin>
         </ListView>
      </VBox>
   </right>
   <padding>
      <Insets bottom="25.0" top="25.0" />
   </padding>
   <stylesheets>
      <URL value="@../styles/style.css" />
      <URL value="@../styles/main-view.css" />
